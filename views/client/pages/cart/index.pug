extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug 
include ../../mixins/alert.pug

block main 
  .container.my-3
    .row 
      .col-12
        +box-head(pageTitle)
        +alert-success(5000)
    .row 
      .col-12 
        table(class="table table-bordered")
          thead 
            tr 
              th STT 
              th Ảnh 
              th Tên 
              th Giá
              th Số lượng
              th Tổng tiền 
              th Hành động 
          tbody 
            - let totalPrice = 0;
            if products.length > 0
              each product,index in products
                tr 
                  td #{index + 1}
                  td 
                    img(
                      src = product.thumbnail
                      alt = "sản phẩm 1"
                      width = "80px"
                    )
                  td 
                    a(
                      href=`/products/detail/${product.slug}`
                    ) #{product.title}
                  td #{product.priceNew.toLocaleString("vi-VN")} đ
                  td 
                    input(
                      type="number"
                      name="quantity"
                      value=product.quantity 
                      min="1"
                      product-id= product.id
                      style="width: 60px;"
                    )
                  td 
                    - totalPrice += product.priceNew * product.quantity
                    div #{(product.priceNew * product.quantity).toLocaleString("vi-VN")} đ
                  td 
                    a(
                      href=`/cart/delete/${product.id}`
                      class="btn btn-danger"
                    ) Xóa
            else 
              p Không có sản phẩm nào trong giỏ hàng
        h3(class="text-end") Tổng đơn hàng: #{totalPrice.toLocaleString("vi-VN")} đ

        div(class="text-end mt-3")
          a(
            href="/checkout"
            class="btn btn-success"
          ) Thanh toán
  script(src="/js/cart.js")