extends ../../layouts/default.pug
include ../../mixins/alert.pug 
include ../../mixins/select-tree.pug 

block main 
  if(role.permissions.includes("products-category_edit"))
    +alert-error(5000)
    +alert-success(5000)
    h1(class = "mb-4") Chỉnh sửa sản phẩm

    form(
      action = `${prefixAdmin}/products-category/edit/${product._id}?_method=PATCH`
      id = "form-edit-product-category"
      method = "POST"
      enctype="multipart/form-data"
    )
      div(class = "form-group")
        label(for = "title") Tiêu đề
        input(
          type = "text"
          class = "form-control"
          id = "title"
          name = "title"
          value = product.title
          required
        )
      .form-group
        label(for="parent-id") Danh mục cha 
        select(
          type = "text"
          name = "parent-id"
          id = "parent-id"
          class = "form-control"
          value = product.parent_id
        )
          option(selected) -- Chọn danh mục cha --
          +select-tree(records,"-- ",product.parent_id)
      div(class = "form-group")
        label(for = "title") Mô tả
        textarea(
          class = "form-control textarea-mce"
          id = "desc"
          name = "description"
          rows = "5"
        ) #{product.description}
      div(
        class = "form-group"
        upload-image  
      )
        label(for = "thumbnail") Ảnh
        input(
          type = "file"
          class = "form-control"
          id = "thumbnail"
          name = "thumbnail"
          accept = "image/*"
          value = file
          upload-image-input
        )
        div(
          class = "image-container"
        )
          img(
            src = product.thumbnail
            upload-image-preview
          )
          button(
            close-image
          ) X
      div(class = "form-group")
        label(for = "position") Vị trí
        input(
          type = "number"
          class = "form-control"
          id = "position"
          name = "position"
          placeholder = "Tự động tăng"
          min = "1"
          value = product.position
        ) 
      div(class = "form-group form-check form-check-inline")
        input(
          type = "radio"
          class = "form-check-input"
          id = "statusActive"
          name = "status"
          value = "active"
          checked = status
        )
        label(for = "statusActive" class = "form-check-label") Hoạt động
      div(class = "form-group form-check form-check-inline")
        input(
          type = "radio"
          class = "form-check-input"
          id = "statusInActive"
          name = "status"
          value = "inactive"
          checked = !status
        )
        label(for = "statusInActive" class = "form-check-label") Dừng hoạt động
      div(class = "form-group")
        button(
          type = "submit"
          class = "btn btn-primary"
        ) Lưu thay đổi
    script(src="/admin/js/product.js")